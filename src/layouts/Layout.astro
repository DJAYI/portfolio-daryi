<style>
  canvas {
    bottom: 0;
    left: 0;
    top: 100px;
    position: fixed;
    filter: brightness(1.1) contrast(1.1);
    mix-blend-mode: multiply;
    mask-image: radial-gradient(circle at 10% 30%, black 20%, transparent 80%);
    aspect-ratio: 600 / 1067;
    opacity: 0;
    will-change: transform, opacity;
    transition: filter 500ms ease;
  }

  /* Hide canvas on mobile devices */
  @media (max-width: 768px) {
    canvas {
      display: none;
    }
  }

  /* Applied when the canvas overlaps the SVG to invert colors */
  canvas.invert-filter {
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    filter: brightness(1.1) contrast(1.1) invert(1);
  }

  svg {
    transition: all 500ms ease;
  }

  /* Make SVG more visible when canvas is behind it */
  svg.highlighted {
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.8));
    transform: scale(1.1);
  }

  /* Mobile optimizations for SVG */
  @media (max-width: 768px) {
    svg {
      width: 60vw !important;
      max-width: 300px !important;
    }
  }

  #blob {
    will-change: transform;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { PixiPlugin } from "gsap/all";
  import Lenis from "lenis";

  // !!! Definimos el mediaQuery al principio para usarlo en la lógica de carga
  const mediaQuery = window.matchMedia("(min-width: 768px)");

  const canvas = document.getElementById("canvas");
  const ctx = canvas.getContext("2d");

  canvas.width = 600;
  canvas.height = 1067;

  // Optimización: Aplicar estilos al canvas, no a las imágenes fuente (ahorra CPU)
  canvas.style.filter = "brightness(1.1)";
  canvas.style.mixBlendMode = "multiply";

  const images = [];
  const IMAGE_COUNT = 160;

  // !!! SOLUCIÓN CRÍTICA: Solo cargar las 160 imágenes si es Desktop
  if (mediaQuery.matches) {
    for (let i = 1; i <= IMAGE_COUNT; i++) {
      const img = new Image();
      // Preload priority low para no bloquear el render inicial
      img.src = `/images/danilo-360-turn/ezgif-frame-${String(i).padStart(3, "0")}.jpg`;
      images.push(img);
    }
  }

  function renderFrame(index) {
    // Protección extra por si el array está vacío en mobile
    if (!images[index] || !images[index].complete) return;
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    ctx.drawImage(images[index], 0, 0, canvas.width, canvas.height);
  }

  // Configuración de Lenis
  const lenis = new Lenis({
    // Puedes ajustar esto para mobile si se siente muy "resbaladizo"
    lerp: 0.1, 
    smoothTouch: true, // Habilitar suavizado en touch devices (opcional)
  });

  lenis.on("scroll", ScrollTrigger.update);

  gsap.ticker.add((time) => {
    lenis.raf(time * 1000);
  });

  gsap.registerPlugin(ScrollTrigger);
  // !!! LagSmoothing 0 puede ser agresivo en móviles cargados. 
  // Mejor dejar un pequeño margen o desactivarlo solo en desktop.
  gsap.ticker.lagSmoothing(0); 
  
  // PixiPlugin parece no usarse aquí (usas Canvas 2D nativo), se podría quitar si no lo usas.
  // gsap.registerPlugin(PixiPlugin); 

  ScrollTrigger.refresh();

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: "#container",
      start: "top top",
      end: mediaQuery.matches ? "50%" : "bottom center", // Ajuste dinámico del final
      scrub: true,
      invalidateOnRefresh: true,
    },
  });

  if (mediaQuery.matches) {
    // --- LÓGICA DESKTOP ---
    
    // 1. Animación de Frames (Solo desktop)
    tl.to(
      { frame: 1 },
      {
        frame: IMAGE_COUNT - 1,
        ease: "none", // easeInOut en frames puede verse raro, 'none' es más lineal al scroll
        onUpdate: function () {
          renderFrame(Math.floor(this.targets()[0].frame));
          canvas.style.opacity = "1";
        },
      }
    )
    .to(canvas, {
        x: `+=${window.innerWidth / 1.5}`,
        scale: 1.2,
        ease: "easeInOut",
      }, "<")
    .to("#blob", {
        scale: 0.8,
        y: -350,
        ease: "none",
      }, "<");

  } else {
    // --- LÓGICA MOBILE ---
    
    // En mobile NO animamos el canvas, solo el blob
    // Usamos 'will-change' via CSS o set en JS para ayudar al GPU
    gsap.set("#blob", { willChange: "transform" });
    
    tl.to("#blob", {
      scale: 10, // Cuidado: Scale 10 puede pixelar o causar carga de GPU alta
      y: 200,
      x: "+=100",
      rotation: 180,
      ease: "none",
    });
    
    // Ocultar canvas en mobile para asegurar que no pinte nada
    canvas.style.display = 'none';
  }

  ScrollTrigger.refresh();

  // --- Helpers y Eventos ---

  const st = tl.scrollTrigger;

  function setInitialFrame() {
    // Solo ejecutar en desktop
    if (!mediaQuery.matches) return;

    const progress = st?.progress ?? 0;
    const idx = Math.floor(progress * (IMAGE_COUNT - 1));
    if (images[idx] && images[idx].complete) {
      renderFrame(idx);
      canvas.style.opacity = "1";
    } else if (images[0] && images[0].complete) {
      renderFrame(0);
      canvas.style.opacity = "1";
    }
  }

  setInitialFrame();

  // Event Listeners para carga de imágenes (Solo Desktop)
  if (mediaQuery.matches) {
    images.forEach((img, i) => {
      img.addEventListener("load", () => {
        const progress = st?.progress ?? 0;
        const targetIdx = Math.floor(progress * (IMAGE_COUNT - 1));
        if (i === targetIdx) {
          renderFrame(i);
          canvas.style.opacity = "1";
        }
      });
    });
  }

  // --- Overlap Detection (Solo Desktop) ---
  const svgEl = document.querySelector("h1");

  function rectsOverlap(a, b) {
    return !(
      b.right < a.left ||
      b.left > a.right ||
      b.bottom < a.top ||
      b.top > a.bottom
    );
  }

  function checkCanvasSvgOverlap() {
    if (!svgEl || !mediaQuery.matches) return;
    
    // Optimización: getBoundingClientRect es costoso. 
    // Considera ejecutar esto con throttle si notas lentitud, 
    // aunque en desktop moderno suele ir bien.
    const a = canvas.getBoundingClientRect();
    const b = svgEl.getBoundingClientRect();
    
    if (rectsOverlap(a, b)) {
      canvas.classList.add("invert-filter");
      svgEl.classList.add("highlighted");
    } else {
      canvas.classList.remove("invert-filter");
      svgEl.classList.remove("highlighted");
    }
  }

  if (mediaQuery.matches) {
    checkCanvasSvgOverlap();
    window.addEventListener("resize", checkCanvasSvgOverlap);
    gsap.ticker.add(checkCanvasSvgOverlap);
  }

  // Limpieza al cambiar viewport
  mediaQuery.addEventListener("change", () => {
    // Recargar página completa suele ser más seguro para cambios drásticos de layout (canvas vs no canvas)
    // window.location.reload(); 
    // O limpiar manualmente:
    ScrollTrigger.getAll().forEach((trigger) => trigger.kill());
    ScrollTrigger.refresh();
  });
</script>
